<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestGitProject.Views.TermsConditions">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                
                <Label Text="Terms and Conditions" Font="20" FontAttributes="Bold" FontFamily="Helvetics" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
                <BoxView HeightRequest="2" />
                <Label FontSize="Small" FontFamily="Helvetica" Font="15" Text="Some Terms Text" HorizontalOptions="CenterAndExpand"
                       VerticalOptions="CenterAndExpand">
                </Label>
                <BoxView HeightRequest="50" />
                <Button Text="Accept Terms &amp; Conditions"  x:Name="acceptButton" Style="{StaticResource ButtonStyle}" WidthRequest="252" HeightRequest="60"
                                    />
            </StackLayout>
        </ScrollView>

    </ContentPage.Content>
</ContentPage>
